<UserControl x:Class="Vis.Block"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="LayoutRoot" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Rectangle x:Name="rectangle" RadiusX="4" RadiusY="4" Stroke="Black" StrokeThickness="1" Fill="White" />
        <TextBlock x:Name="textBlock" Margin="4,1,4,1"/>
    </Grid>
</UserControl>
